


<%-include('header')-%>

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5" id="border1">
        <div class="title pb-5">
            <h2 class="font-weight-bold label_text"> Welcome to Aj Tech Hub </h2>
            <span id="span1" class="label_text">Please log in with your Email and Pssword</span>
            <% if(locals.message){%>
                <div class= "text-center text-danger fw-bold">
                    <%= message %>
                </div>
            <%}%>

            <% if(locals.logout){ %>
                <div class="label_text">
                    <%= logout %>
                </div>
            <%}%>
        </div>
        <form action="/route/login" method="post" class="pt-3" onsubmit="return validateForm()">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email" id="email">
                <small class="label_text">Email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control " name="password" placeholder="password" id="password">
                <small class="label_text">password</small>
            </div>
            <br>
            <button type="submit" class="btn btn-danger rounded-pill">submit</button>
        </form>
    </div>
</div>

<script>
    function validateForm() {
        var email = document.getElementById('email').value;
        var password = document.getElementById('password').value;

        if (email.trim() === '') {
            alert('Please enter your EMAIL.');
            return false;
        }

        if (password.trim() === '') {
            alert('Please enter your PASSWORD.');
            return false;
        }

        return true;
    }
</script>

